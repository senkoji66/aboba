<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="427px"
        android:layout_height="362px"
        android:background="@drawable/ic_frame_7">

        <LinearLayout
            android:layout_width="425px"
            android:layout_height="360px"
            android:background="@android:drawable/dialog_holo_light_frame"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/room_image"
                android:layout_width="128px"
                android:layout_height="128px"
                android:background="@drawable/ic_frame_24" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name Room"
                android:textColor="#984E4F"
                android:textSize="24px"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="num devices"
                android:textColor="#0E0E12"
                android:textSize="24px"
                android:textStyle="normal" />
        </LinearLayout>

    </RelativeLayout>


</RelativeLayout>
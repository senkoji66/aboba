<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".profileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="600px"
        android:background="#2A2A37"
        android:gravity="center"
        tools:ignore="MissingConstraints">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/user_avatar_btn"
                android:layout_width="235px"
                android:layout_height="232px"
                android:layout_marginTop="70dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/unnamed" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="65dp"
                android:layout_marginTop="130dp"
                android:backgroundTint="#984E4F"
                android:src="@drawable/ic_icon_camera"
                app:fabSize="mini"
                tools:ignore="SpeakableTextPresentCheck" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="250dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical"
        android:layout_weight="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User Name"
            android:textColor="#707070"/>

        <EditText
            android:id="@+id/username_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Edit Your Name"
            android:inputType="text"
            android:textColor="@color/black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Email"
            android:textColor="#707070"/>

        <EditText
            android:id="@+id/email_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Edit Your Email"
            android:inputType="textPassword"
            android:textColor="@color/black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Phone"
            android:textColor="#707070"/>

        <EditText
            android:id="@+id/phone_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Edit Your Phone"
            android:inputType="number"
            android:textColor="@color/black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Gender"
            android:textColor="#707070"/>

        <EditText
            android:id="@+id/gender_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Edit Your Gender"
            android:inputType="text"
            android:textColor="@color/black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Date Of Birth"
            android:textColor="#707070"/>

        <EditText
            android:id="@+id/birth_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Date"
            android:textColor="@color/black"/>

        <Button
            android:id="@+id/sign_out_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@android:color/primary_text_light"
            android:textSize="11dp"
            android:text="Sign Out"
            android:textColor="#F13327"/>

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomappbar"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_gravity="bottom"
            android:layout_weight="0"
            android:backgroundTint="@color/white"
            app:menu="@menu/navigation" />



    </LinearLayout>


    <com.google.android.material.appbar.MaterialToolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2A2A37"
        app:title="Profile"
        app:titleTextColor="@color/white"
        app:titleCentered="true"
        tools:ignore="MissingConstraints">

        <Button
            android:id="@+id/profile_save_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            android:textColor="@color/white"
            android:textStyle="italic"
            android:backgroundTint="#2A2A37"
            android:layout_gravity="right"/>

    </com.google.android.material.appbar.MaterialToolbar>


</FrameLayout>